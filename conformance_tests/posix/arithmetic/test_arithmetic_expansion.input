# Test arithmetic expansion functionality

# Basic arithmetic operations
echo $((2 + 3))
echo $((10 - 4))
echo $((3 * 4))
echo $((15 / 3))
echo $((17 % 5))

# Test with variables
a=5
b=3
echo $((a + b))
echo $((a * b))

# Test comparison operations
echo $((5 > 3))
echo $((5 < 3))
echo $((5 == 5))
echo $((5 != 3))

# Test logical operations
echo $((1 && 1))
echo $((1 && 0))
echo $((1 || 0))
echo $((0 || 0))

# Test parentheses grouping
echo $(((2 + 3) * 4))
echo $((2 + (3 * 4)))

# Test assignment within arithmetic
echo $((c = 10))
echo $c

# Test increment/decrement
echo $((c++))
echo $c
echo $((++c))
echo $c

# Test with hex and octal
echo $((0xFF))
echo $((010))

# Test bitwise operations
echo $((7 & 3))
echo $((7 | 3))
echo $((7 ^ 3))